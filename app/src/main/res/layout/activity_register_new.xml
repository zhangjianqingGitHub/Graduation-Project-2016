<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterActivityNew">

    <include
        android:id="@+id/title"
        layout="@layout/activity_top" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_margin="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/icon_user"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:theme="@style/MyEditText" />


            <ImageView
                android:id="@+id/iv_qingkong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/icon_x"
                android:visibility="invisible" />

            <View
                style="@style/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_user_name"
                android:layout_marginTop="3dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_yanzheng"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="3dp">

            <EditText
                android:id="@+id/et_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/icon_yanzhengma"
                android:hint="请输入验证码"
                android:theme="@style/MyEditText" />

            <Button
                android:id="@+id/btn_huoqu"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_bg_kuang"
                android:text="获取验证码"
                android:textColor="@color/main_color"
                android:textSize="12sp" />

            <View
                style="@style/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_yanzheng"
                android:layout_marginTop="3dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/suoclose" />

            <EditText
                android:id="@+id/et_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_show"
                android:background="@null"
                android:hint="设置登录密码（6-16位）"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/iv_qingkong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/icon_x"
                android:visibility="invisible" />


            <View
                style="@style/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_user_password"
                android:layout_marginTop="3dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_password_too"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_show_too"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/suoclose" />

            <EditText
                android:id="@+id/et_user_password_too"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_show_too"
                android:background="@null"
                android:hint="请输入新密码（6-16位）"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/iv_qingkong4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/icon_x"
                android:visibility="invisible" />


            <View
                style="@style/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_user_password_too"
                android:layout_marginTop="3dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_yaoqing"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="3dp">

            <EditText
                android:id="@+id/et_yaoqingma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/icon_yaoqingma"
                android:hint="请输入邀请码  (选填)"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/iv_qingkong3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/icon_x"
                android:visibility="invisible" />

            <View
                style="@style/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_yaoqingma"
                android:layout_marginTop="3dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_regist"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/rl_shuru"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_bg_banyuan_hui"
            android:text="立即注册"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/ll_xieyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_tongyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_butongyi"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:hint="我已阅读并同意"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《爱点读用户协议》"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_sun"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/bg_person" />

    </LinearLayout>


</RelativeLayout>